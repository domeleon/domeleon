{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["es2022", "dom", "dom.iterable"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "domeleon": ["src/index"],
      "domeleon/react": ["src/renderers/react/index"],
      "domeleon/vue": ["src/renderers/vue/index"],
      "domeleon/inspector": ["src/addons/inspector/index"],
      "domeleon/maskito": ["src/addons/maskito/index"],
      "domeleon/unocss": ["src/addons/unocss/index"],
      "domeleon/zod": ["src/addons/zod/index"],
      "domeleon/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "dist"]
} 